{
	"name": "upload_files_trg",
	"properties": {
		"description": "when the files will upload it will be carged on database",
		"annotations": [],
		"runtimeState": "Started",
		"pipelines": [
			{
				"pipelineReference": {
					"referenceName": "upload_files",
					"type": "PipelineReference"
				},
				"parameters": {
					"sourceFolder": "@triggerBody().folderPath",
					"sourceFile": "@triggerBody().fileName"
				}
			}
		],
		"type": "BlobEventsTrigger",
		"typeProperties": {
			"blobPathBeginsWith": "/fileupload/blobs/",
			"blobPathEndsWith": ".csv",
			"ignoreEmptyBlobs": true,
			"scope": "/subscriptions/26d7d07d-2dba-4feb-a583-be294dc1b8e9/resourceGroups/ChallengeGlobant/providers/Microsoft.Storage/storageAccounts/challengemigrationfiles",
			"events": [
				"Microsoft.Storage.BlobCreated"
			]
		}
	}
}